<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ticketPrice"
        android:text="@string/ticket_price"
        android:textSize="@dimen/generic_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/generic_margin"/>

    <EditText
        android:id="@+id/editText"
        android:textSize="@dimen/generic_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:hint="@string/enter_ticket_price_hint"
        android:layout_marginTop="@dimen/generic_small_margin"
        android:layout_marginStart="@dimen/generic_small_margin"
        android:layout_marginEnd="@dimen/generic_margin"
        android:layout_toEndOf="@id/ticketPrice"/>

    <TextView
        android:id="@+id/discount"
        android:text="@string/discount"
        android:textSize="@dimen/generic_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ticketPrice"
        android:layout_margin="@dimen/generic_margin"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_margin="@dimen/generic_small_margin"
        android:layout_toEndOf="@id/discount">
        <RadioButton
            android:id="@+id/discount5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/generic_text_size"
            android:checked="true"
            android:text="@string/discount_5"/>
        <RadioButton
            android:id="@+id/discount10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/generic_text_size"
            android:text="@string/discount_10"/>
        <RadioButton
            android:id="@+id/discount15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/generic_text_size"
            android:text="@string/discount_15"/>
        <RadioButton
            android:id="@+id/discount20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/generic_text_size"
            android:text="@string/discount_20"/>
        <RadioButton
            android:id="@+id/discount50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/generic_text_size"
            android:text="@string/discount_50"/>
    </RadioGroup>

    <TextView
        android:id="@+id/discountPrice"
        android:text="@string/discounted_price"
        android:textSize="@dimen/generic_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/generic_margin"/>

    <TextView
        android:id="@+id/discountPriceValue"
        android:textSize="@dimen/generic_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group"
        android:layout_toEndOf="@id/discountPrice"
        android:layout_margin="@dimen/generic_margin"/>

    <Button
        android:id="@+id/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_below="@id/discountPrice"
        android:layout_margin="@dimen/generic_small_margin"
        android:text="@string/calculate"
        android:textSize="@dimen/generic_text_size"
        android:backgroundTint="@color/gray"/>

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculate"
        android:enabled="false"
        android:layout_marginEnd="@dimen/generic_small_margin"
        android:textColor="@color/black"
        android:text="@string/clear"
        android:backgroundTint="@color/white"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>